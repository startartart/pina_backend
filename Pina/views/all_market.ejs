<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jua&family=Roboto:wght@300&family=Sunflower:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../css/style.css">
    <link rel="stylesheet" href="../css/all_market.css">
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="../js/market_pop_up.js"></script>
    <title>Floword</title>
    <script src="https://kit.fontawesome.com/a5dc1e6b68.js" crossorigin="anonymous"></script>
</head>
<body>
<!-- Header -->
<header>
    <div class="prev_btn">
        <button onclick="history.go(-1)"><i class="fas fa-chevron-left"></i></button>
    </div>
    <div class="title">마켓</div>
    <div class="empty"></div>
</header>
<!-- category -->
<section class="market_filter">
    <div class="market_categoty">
        <button class="market_category_btn" id="openModalPop1">카테고리</button>
    </div>
    <div id= "modal1">
        <button id="close_button1"></button>
    </div>
        <div id="banner_online1">
            <h2>카테고리</h2>
            <div class="pop_content">
                <button class="category_popup">꽃다발</button>
                <button class="category_popup">미니화분</button>
                <button class="category_popup">땡떙떙</button>
                <button class="category_popup">땡떙땡</button>
            </div>
            <div id="complete_button1" class="complete">
                <button>선택완료</button>
            </div>
        </div>
    <div class="market_age">
        <button class="market_age_btn" id="openModalPop2">연령대</button>
    </div>
    <div id= "modal2">
        <button id="close_button2"></button>
    </div>
        <div id = "banner_online2">
            <h2>연령대</h2>
            <div class="pop_content">
                <button class="category_popup">10대</button>
                <button class="category_popup">20대 초반</button>
                <button class="category_popup">20대 중반</button>
                <button class="category_popup">20대 후반</button>
                <button class="category_popup">30대 초반</button>
                <button class="category_popup">30대 중반</button>
                <button class="category_popup">30대 후반</button>
                <button class="category_popup">40대</button>
            </div>
            <div id="complete_button2" class="complete">
                <button>선택완료</button>
            </div>
        </div>
    <div class="market_concept">
        <button class="market_concept_btn" id="openModalPop3">컨셉</button>
    </div>
    <div id= "modal3">
        <button id="close_button3"></button>
    </div>
        <div id = "banner_online3">
            <h2>컨셉</h2>
            <div class="pop_content">
                <button class="category_popup">꽃다발</button>
                <button class="category_popup">미니화분</button>
                <button class="category_popup">땡떙떙</button>
                <button class="category_popup">땡떙땡</button>
            </div>
            <div id="complete_button3" class="complete">
                <button>선택완료</button>
            </div>
        </div>
</section>
<!-- markets -->
<section class="markets">
    <% for(let prize of prizes) { %>
    <div class="market">
        <div>
            <div class="market_name"><%= prize.price_id%></div>
            <div class="market_age">#<%= prize.Grade%>대</div>
            <div class="market_tag">#<%= prize.color%> #<%= prize.litle_title%> #<%= prize.flower_name%></div>
        </div>
        <div class="market_img"><img src="../image/<%= prize.price_picture %>"></div>
    </div>
    <% } %>
</section>
<!-- bottom menu -->
<section class="bottom_menu">
    <li>
        <button onclick="location.href='/'">
            <i class="fas fa-home"></i>
            <p class="sunflower bottom_txt">홈</p>
        </button>
    </li>
    <li>
        <button onclick="location.href='/search'">
            <i class="fas fa-search"></i>
            <p class="sunflower bottom_txt">검색</p>
        </button>
    </li>
    <li>
        <button onclick="location.href='/products'">
            <i class="fas fa-th-large"></i>
            <p class="sunflower bottom_txt">모아보기</p>
        </button>
    </li>
    <li>
        <button onclick="location.href='/all_market'" class="bottom_btn">
            <i class="fas fa-store-alt"></i>
            <p class="sunflower bottom_txt">마켓</p>
        </button>
    </li>
    <li>
        <button onclick="location.href='/mypage'">
            <i class="fas fa-user"></i>
            <p class="sunflower bottom_txt">정보</p>
        </button>
    </li>
</section>
</body>